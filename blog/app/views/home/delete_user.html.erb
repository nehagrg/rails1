<%= form_tag("/delete",method: "post") do %>
  <%= label_tag(:name, "name") %>
  <%= text_field_tag(:name) %>
  <%= label_tag(:city, "city") %>
  <%= text_field_tag(:city) %>
  <%= radio_button_tag(:gender, "male") %>
  <%= label_tag(:gender_male,"male") %>
  <%= radio_button_tag(:gender, "female") %>
  <%= label_tag(:gender_female, "female") %>
  <%= submit_tag("delete") %>
<% end %>  