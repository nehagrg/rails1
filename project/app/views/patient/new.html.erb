<%= form_for @patient,url: { action: "create_patient"}, htnl: {class: "patient"} do|d| %>
  <%= d.label :name %>
  <%= d.text_field :name %>
  <%= d.label :age %>
  <%= d.text_field :age %>
  <%= d.label :gender %>
  <%= d.radio_button :gender,"male" %>
  <%= d.label :male %>
  <%= d.radio_button :gender,"female" %>
  <%= d.label :female %>
  <%= d.submit :create_patient %>
<% end %>    