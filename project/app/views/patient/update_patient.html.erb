
<%= form_for @patient,url: { action: "updated_patient"}, htnl: {class: "patient"} do|d| %>
  <%= d.label :name %>
  <%= d.text_field :name %>
  <%= d.label :age %>
  <%= d.text_field :age %>
  <%= d.hidden_field :id %>
  <%= d.label :gender %>
  <%= d.radio_button :gender,"male" %>
  <%= d.label :male %>
  <%= d.radio_button :gender,"female" %>
  <%= d.label :female %>
  <%= d.submit :updated_patient %>
<% end %>    